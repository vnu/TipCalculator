<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TipCalulatorActivity" >

    <TextView
        android:id="@+id/tvTipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnTen"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="96dp"
        android:text="@string/tip_text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etTotalAmount"
        android:layout_alignBottom="@+id/etTotalAmount"
        android:layout_alignParentLeft="true"
        android:text="@string/total_txt"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etTotalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:layout_toRightOf="@+id/tvTotal"
        android:ems="10"
        android:hint="@string/total_cost_hint"
        android:inputType="numberDecimal">
        <requestFocus /> 
    </EditText>

    <TextView
        android:id="@+id/tvTipAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTipText"
        android:layout_alignBottom="@+id/tvTipText"
        android:layout_toRightOf="@+id/btnThirty"
        android:text="@string/tip_amount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/etTotalAmount"
        android:layout_below="@+id/etTotalAmount"
        android:layout_marginTop="18dp"
        android:enabled="false"
        android:onClick="showOther"
        android:text="@string/other" />

    <Button
        android:id="@+id/btnThirty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnOther"
        android:layout_alignBottom="@+id/btnOther"
        android:layout_toLeftOf="@+id/btnOther"
        android:enabled="false"
        android:onClick="calculateThirtyPercent"
        android:text="@string/thirty_percent" />

    <Button
        android:id="@+id/btnTwenty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnThirty"
        android:layout_alignBottom="@+id/btnThirty"
        android:layout_toLeftOf="@+id/btnThirty"
        android:enabled="false"
        android:onClick="calculateTwentyPercent"
        android:text="@string/twenty_percent" />

    <Button
        android:id="@+id/btnTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnTwenty"
        android:layout_alignBottom="@+id/btnTwenty"
        android:layout_toLeftOf="@+id/btnTwenty"
        android:enabled="false"
        android:onClick="calculateTenPercent"
        android:text="@string/ten_percent" />

    <TextView
        android:id="@+id/tvTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvTotal"
        android:layout_centerVertical="true"
        android:text="@string/tip_percent"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/etTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvTipPercent"
        android:layout_alignBottom="@+id/tvTipPercent"
        android:layout_alignRight="@+id/tvTipText"
        android:layout_toRightOf="@+id/tvTipPercent"
        android:ems="10"
        android:enabled="false"
        android:hint="@string/tip_percent_hint"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/btnTipCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etTipPercent"
        android:layout_toRightOf="@+id/etTipPercent"
        android:enabled="false"
        android:onClick="calculateOtherTip"
        android:text="@string/calculate" />

</RelativeLayout>
